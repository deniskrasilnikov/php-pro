{{ form_start(form, {attr: {class: 'mb-3'}}) }}
    {{ form_errors(form) }}

    <div class="col-3">
        {{ form_row(form.name) }}
        {{ form_row(form.author) }}
        {{ form_row(form.isbn10, { help: 'https://generate.plus/en/number/isbn' }) }}
        {{ form_row(form.genres) }}
    </div>

    <div class="col-5">
        {% if form.synopsis is defined %}
            {{ form_row(form.synopsis) }}
        {% endif %}

        {{ form_row(form.text) }}
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
{{ form_end(form) }}

