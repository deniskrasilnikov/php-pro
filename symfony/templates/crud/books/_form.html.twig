{% form_theme form 'form/pure_theme.html.twig' %}

{{ form_start(form, { 'attr' : { 'class': 'pure-form pure-form-stacked' } }) }}
    {{ form_errors(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.author) }}
    {{ form_row(form.isbn10) }}
    {{ form_row(form.genres) }}

    {% if form.synopsis is defined %}
        {{ form_row(form.synopsis) }}
    {% endif %}

    {{ form_row(form.text) }}
    <button type="submit" class="pure-button pure-button-primary">Save</button>
{{ form_end(form) }}

